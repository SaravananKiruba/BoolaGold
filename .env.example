# Database
DATABASE_URL="mysql://user:password@localhost:3306/jewelry_store"

# Application
NODE_ENV="development"
APP_URL="http://localhost:3000"
APP_PORT=3000

# Security
# IMPORTANT: Generate a strong random secret for production
# Example: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="your-secret-key-change-in-production-use-at-least-32-characters"

# File Upload (if needed later)
MAX_FILE_SIZE=5242880

# Pagination defaults
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
