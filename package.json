    "date-fns": "^3.6.0",
    "framer-motion": "^12.23.24",
    "next": "^14.2.18",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.23.8",
    "bcryptjs": "^2.4.3",
    "jose": "^5.2.0"
