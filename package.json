{
  "name": "jewelry-store-management",
  "version": "1.0.0",
  "description": "Production-ready Jewelry Store Management System",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
